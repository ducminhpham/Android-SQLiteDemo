<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- This specifies the appearance of a view when it is disabled-->
    <item
        android:state_enabled="false"
        android:drawable="@drawable/warning_button_disabled">
    </item>

    <!-- This specifies the appearance of a view when it is pressed (and enabled)-->
    <item
        android:state_pressed="true"
        android:state_enabled="true"
        android:drawable="@drawable/warning_button_pressed">
    </item>

    <!-- This specifies the appearance of a view when it is hovered (and enabled)-->
    <item
        android:state_hovered="true"
        android:state_enabled="true"
        android:drawable="@color/warning_button_hovered">
    </item>

    <!-- This specifies default appearance of a view (when it is enabled)-->
    <item
        android:state_enabled="true"
        android:drawable="@drawable/warning_button_active">
    </item>

</selector>